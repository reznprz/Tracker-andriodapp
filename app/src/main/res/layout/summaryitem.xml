<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">

    <android.support.v7.widget.CardView
        android:id="@+id/mycardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_default_elevation"
        android:padding="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/wallet_dim_foreground_disabled_holo_dark">

        <TextView
            android:id="@+id/textviewstop"
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="@dimen/cardview_default_elevation"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:lines="3"
            android:paddingLeft="@dimen/cardview_default_elevation"
            android:text="TextView" />

        <TextView
            android:id="@+id/textviewtime"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/cardview_default_elevation"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:drawableStart="@mipmap/ic_notifications_white_24dp"
            android:ems="5"
            android:gravity="center_vertical|start"
            android:lines="3"
            android:paddingEnd="12dp"
            android:paddingLeft="12dp"
            android:text="TextView" />

    </android.support.v7.widget.CardView>


</RelativeLayout>

